{
  "name": "tablet-weaving",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/svelte": "^3.1.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jest": "^27.4.1",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "rollup": "^2.70.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.46.0",
    "svelte-check": "^2.4.6",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.4",
    "svelte-scrollto": "^0.2.0",
    "ts-jest": "^27.1.3",
    "tslib": "^2.0.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0",
    "svelte-i18n": "^3.3.13"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "__HASH__": "#MjoxMDowMDAxMDAxMDAwMDExMDAxMDAwMDp8MSMzNDY1YTQjMzQ2NWE0IzM0NjVhNCMzNDY1YTR8MCNjYzAwMDAjY2MwMDAwI2NjMDAwMCNjYzAwMDA="
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**",
	  "!./src/global.d.ts"
    ],
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
	  "./fixtures/localStorageMock.js",
	  "./fixtures/windowLocation.js"
    ],
	"moduleNameMapper": {
	  "^svelte-scrollto$": "<rootDir>/fixtures/svelteScrollto.ts",
	  "^svelte-i18n$": "<rootDir>/fixtures/svelteI18n.ts"
	}
  }
}
